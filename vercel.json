{
  "buildCommand": "cd web/frontend && bun install && bun run build && cd docs && bun install && bun run build && cp -r build ../dist/docs",
  "outputDirectory": "web/frontend/dist",
  "functions": {
    "api/index.go": {
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.go"
    },
    {
      "source": "/openapi.json",
      "destination": "/api/index.go"
    },
    {
      "source": "/((?!docs).*)",
      "destination": "/index.html"
    }
  ]
}